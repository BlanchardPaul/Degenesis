<MudDialog>
    <DialogContent>
        <MudTextField Label="Name" @bind-Value="Artifact.Name" />
        <MudTextField Label="Description" @bind-Value="Artifact.Description" />
        <MudTextField Label="Energy Storage" @bind-Value="Artifact.EnergyStorage" />
        <MudNumericField Label="Magazine" @bind-Value="Artifact.Magazine" />
        <MudNumericField Label="Encumbrance" @bind-Value="Artifact.Encumbrance" />
        <MudTextField Label="Activation" @bind-Value="Artifact.Activation" />
        <MudNumericField Label="Value" @bind-Value="Artifact.Value" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="SaveArtifact" Color="Color.Primary">Save</MudButton>
        <MudButton OnClick="Cancel" Color="Color.Secondary">Cancel</MudButton>
    </DialogActions>
</MudDialog>