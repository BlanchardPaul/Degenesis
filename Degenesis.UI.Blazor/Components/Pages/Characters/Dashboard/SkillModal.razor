<MudDialog>
    <DialogContent>
        <MudTextField Label="Name" @bind-Value="Skill.Name" Required="true" />

        <MudTextField Label="Description" @bind-Value="Skill.Description" Required="true" />
        <MudTextField Label="Abbreviation" @bind-Value="Skill.Abbreviation" Required="true" />
        <MudSelect T="Guid"
                   Label="Attribute"
                   Value="Skill.CAttributeId"
                   ValueChanged="OnAttributeChanged"
                   ValueExpression="@(() => Skill.CAttributeId)"
                   Required="true">
            @foreach (var cattribute in Attributes)
            {
                <MudSelectItem Value="@cattribute.Id">@cattribute.Name</MudSelectItem>
            }
        </MudSelect>
    </DialogContent>

    <DialogActions>
        <MudButton OnClick="SaveSkill" Color="Color.Primary">Save</MudButton>
        <MudButton OnClick="Cancel" Color="Color.Secondary">Cancel</MudButton>
    </DialogActions>
</MudDialog>