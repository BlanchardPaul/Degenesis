@page "/concepts"
@using Degenesis.Shared.DTOs.Characters
@using Degenesis.UI.Service.Features.Characters
@inject ConceptService ConceptService
@inject SkillService SkillService
@inject AttributeService AttributeService
@inject IDialogService DialogService

<h3>Concepts</h3>

<MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="ShowCreateDialog">Create New Concept</MudButton>

@if (concepts == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <MudTable Items="@concepts" Hover="true" LoadingProgressColor="Color.Info">
        <HeaderContent>
            <MudTh>Name</MudTh>
            <MudTh>Description</MudTh>
            <MudTh>Bonus Attribute</MudTh>
            <MudTh>Bonus Skills</MudTh>
            <MudTh>Actions</MudTh>
        </HeaderContent>
        <RowTemplate>
            <MudTd DataLabel="Name">@context.Name</MudTd>
            <MudTd DataLabel="Description">@context.Description</MudTd>
            <MudTd DataLabel="Bonus Attribute">@context.BonusAttribute?.Name</MudTd>
            <MudTd DataLabel="Bonus Skills">
                @if (context.BonusSkills != null && context.BonusSkills.Any())
                {
                    @string.Join(", ", context.BonusSkills.Select(bs => bs.Name))
                }
                else
                {
                    <span>No bonus skills</span>
                }
            </MudTd>
            <MudTd>
                <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="() => ShowEditDialog(context.Id)">Edit</MudButton>
                <MudButton Variant="Variant.Filled" Color="Color.Error" OnClick="() => DeleteConcept(context.Id)">Delete</MudButton>
            </MudTd>
        </RowTemplate>
    </MudTable>
}
