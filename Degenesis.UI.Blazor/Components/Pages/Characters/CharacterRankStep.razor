<MudStack Row Class="mb-4">
    <MudText Typo="Typo.h6">Select a Rank</MudText>
</MudStack>

<MudForm @ref="_formStepRank">
    <MudStack Row AlignItems="AlignItems.Center">
        @foreach (var rank in Ranks.Where(r => r.ParentRankId == null))
        {
            <RankBranch Rank="rank"
                        AllRanks="Ranks"
                        Character="Character"
                        SelectedRankId="SelectedRankId"
                        OnRankSelected="OnRankSelected" />
        }
    </MudStack>
</MudForm>