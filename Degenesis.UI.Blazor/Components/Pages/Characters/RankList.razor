@page "/ranks"
@using Degenesis.UI.Service.Features.Characters
@inject CultService CultService
@inject RankService RankService
@inject RankPrerequisiteService RankPrerequisiteService
@inject IDialogService DialogService
@layout Layout.DashBoardLayout

<h3>Ranks</h3>

<MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="ShowCreateDialog">Create New Rank</MudButton>

@if (ranks is null)
{
    <p><em>Loading...</em></p>
}
else
{
    <MudTable Items="@ranks" Hover="true">
        <HeaderContent>
            <MudTh>Name</MudTh>
            <MudTh>Description</MudTh>
            <MudTh>Equipment</MudTh>
            <MudTh>Cult</MudTh>
            <MudTh>Prerequisites</MudTh>
            <MudTh>Actions</MudTh>
        </HeaderContent>
        <RowTemplate>
            <MudTd>@context.Name</MudTd>
            <MudTd>@context.Description</MudTd>
            <MudTd>@context.Equipment</MudTd>
            <MudTd>@context.Cult.Name</MudTd>
            <MudTd>
                @if (context.Prerequisites.Any())
                {
                    @foreach (var prerequisite in context.Prerequisites)
                    {
                        <div>@GetPrerequisiteLabel(prerequisite) | </div>
                    }
                }
                else
                {
                    <span>No Prerequisites</span>
                }
            </MudTd>
            <MudTd>
                <MudButton OnClick="() => ShowEditDialog(context.Id)" Color="Color.Primary">Edit</MudButton>
                <MudButton OnClick="() => DeleteRank(context.Id)" Color="Color.Error">Delete</MudButton>
            </MudTd>
        </RowTemplate>
    </MudTable>
}
