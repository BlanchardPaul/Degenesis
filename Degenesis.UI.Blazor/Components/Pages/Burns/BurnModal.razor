<MudDialog>
    <DialogContent>
        <MudTextField Label="Name" @bind-Value="Burn.Name" />
        <MudTextField Label="Description" @bind-Value="Burn.Description" />
        <MudTextField Label="Chakra" @bind-Value="Burn.Chakra" />
        <MudTextField Label="Earth Chakra" @bind-Value="Burn.EarthChakra" />
        <MudTextField Label="Effect" @bind-Value="Burn.Effect" />
        <MudNumericField Label="Weak Cost" @bind-Value="Burn.WeakCost" />
        <MudNumericField Label="Potent Cost" @bind-Value="Burn.PotentCost" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="SaveBurn" Color="Color.Primary">Save</MudButton>
        <MudButton OnClick="Cancel" Color="Color.Secondary">Cancel</MudButton>
    </DialogActions>
</MudDialog>